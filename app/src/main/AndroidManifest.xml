<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.astra.melkovhw151">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MorningActivity">
            <intent-filter>
                <action android:name="android.intent.action.SYNC"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="http" android:host="morning"/>
            </intent-filter>
        </activity>

        <activity android:name=".DayActivity">
            <intent-filter>
                <action android:name="android.intent.action.SYNC"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="http" android:host="day"/>
            </intent-filter>
        </activity>

        <activity android:name=".EveningActivity">
            <intent-filter>
                <action android:name="android.intent.action.SYNC"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="http" android:host="evening"/>
            </intent-filter>
        </activity>

    </application>



</manifest>